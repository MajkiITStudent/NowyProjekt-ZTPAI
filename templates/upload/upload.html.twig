{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Add New Event{% endblock %}

{% block body %}
    <div class="container">
        {% form_theme uploadForm 'bootstrap_5_layout.html.twig' %}
        {{ form_start(uploadForm, {'attr': {'class': 'd-flex flex-column pt-2 pb-4 align-items-center'}}) }}
            {{ form_row(uploadForm.filename) }}
            {{ form_row(uploadForm.description) }}
            {{ form_row(uploadForm.sport_type) }}
            {{ form_row(uploadForm.event_datetime) }}
            {{ form_row(uploadForm.people_needed) }}
            <input type="submit" value="Create An Event" class="form-control btn btn-success w-auto ">
        {{ form_end(uploadForm) }}
        {% for mess in app.flashes('success') %}
            <div class="alert-success">
                {{ mess }}
            </div>
        {% endfor %}
        {% for mess in app.flashes('error') %}
            <div class="alert-danger">
                {{ mess }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
