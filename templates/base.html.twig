<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sportsload{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/simpleLightbox.min.css') }}">
    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('assets/js/jquery-3.4.1.slim.min.js') }}"></script>
        <script src="{{ asset('assets/js/popper.min.js') }}"></script>
        <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
    {% endblock %}

    <style>
        /*body{
            width: 100vw;
            height: 100vh;
            background: transparent linear-gradient(180deg, #FFFFFF 0%, #272B3C 0%, #2175B9 49%, #6192E1 72%, #6DC7D0 100%) 0% 0% no-repeat padding-box;
        }*/
    </style>
</head>
<body>

<!--NAV-->
<nav class="navbar navbar-expand-lg navbar-dark " style="background: transparent linear-gradient(180deg, #FFFFFF 0%, #272B3C 0%, #2175B9 49%, #6192E1 72%, #6DC7D0 100%) 0% 0% no-repeat padding-box">
    <div class="container">
        <a class="navbar-brand" href="{{ path("index") }}">
            <img src="assets/images/logo.svg" width="215" height="50" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path("show_events") }}">Events</a>
                </li>
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("add_event") }}">Add Event</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Observed</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("profile")}}">Profile</a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path("app_register") }}">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path("app_login") }}">Login</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
{% if app.user %}
    <div class="container">
        <div class="card mt-2 ">
            <div class="card-header text-center">
                Hi, you are logged as:
                <h5>{{ app.user.username }}</h5>
                <a href="{{ path('app_logout') }} " class="btn btn-primary">Logout</a>
            </div>
        </div>
    </div>
{% endif %}
<!--CONTENT-->
{% block body %}{% endblock %}

<!--FOOTER-->
<footer>
    <div class="fixed-bottom pt-3 pb-3 bg-secondary">
        <span class="d-block text-center text-white">Michał Pierzchała - michal.pierzchala99@poczta.fm</span>
    </div>
</footer>


</body>
</html>
